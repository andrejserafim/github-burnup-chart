<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} %-5level %-20.20logger %message%n%xException{5}</pattern>
    </encoder>
  </appender>

  <logger name="org.apache" level="warn" />

  <root level="debug">
    <appender-ref ref="STDOUT" />
  </root>

</configuration>
